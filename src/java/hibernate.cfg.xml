<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gameportal?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="database/model/Comments.hbm.xml"/>
    <mapping resource="database/model/Users.hbm.xml"/>
    <mapping resource="database/model/Featured.hbm.xml"/>
    <mapping resource="database/model/Gameranking.hbm.xml"/>
    <mapping resource="database/model/Categories.hbm.xml"/>
    <mapping resource="database/model/Games.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
